  <h3 class="text-center text-primary mb-4">Student Login</h3>
  <div class="teachLog d-flex justify-content-center">
    <form method="POST" class="teachForm p-4 rounded shadow bg-light" style="width: 100%; max-width: 400px;">
        <div class="mb-3">
          <label for="roll" class="form-label fw-bold">Roll No:</label>
          <input type="number" name="roll" class="form-control" id="roll" placeholder="Enter your roll number" required>
        </div>
        <div class="mb-3">
          <label for="dob" class="form-label fw-bold">Date of Birth:</label>
          <input type="date" name="dob" class="form-control" id="dob" required>
        </div>
        <div class="d-grid mt-4">
          <button type="submit" class="btn btn-primary btn-lg">Submit</button>
        </div>
    </form>
  </div>
  
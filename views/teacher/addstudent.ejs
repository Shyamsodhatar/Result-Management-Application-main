<style>
  body {
    background-color: #f8f9fa;
}

h4 {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #333;
}

.form-label {
    color: #495057;
    font-size: 1.1em;
}

.form-control {
    border-radius: 8px;
}

.btn {
    border-radius: 20px;
}

.addStu {
    border: 1px solid #e0e0e0;
    background-color: #ffffff;
}

</style>
<a href="/teacher/option" class="btn btn-info" style="margin-top:5px;">Back</a>
<h4 class="text-center my-4">Add Student Result</h4>
<form method="POST" class="addStu p-4 rounded shadow-lg bg-light" autocomplete="off" style="max-width: 500px; margin: auto;">
    <div class="mb-3">
      <label for="roll" class="form-label fw-bold">Roll No. :</label>
      <input type="number" name="roll" required class="form-control" id="roll" placeholder="Enter Roll Number">
    </div>
    <div class="mb-3">
      <label for="name" class="form-label fw-bold">Name :</label>
      <input type="text" name="name" required class="form-control" id="name" placeholder="Enter Student's Name">
    </div>
    <div class="mb-3">
      <label for="dob" class="form-label fw-bold">Date of Birth :</label>
      <input type="date" name="dob" class="form-control" id="dob">
    </div>
    <div class="mb-3">
      <label for="score" class="form-label fw-bold">Score :</label>
      <input type="number" name="score" required class="form-control" id="score" placeholder="Enter Score">
    </div>
    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success px-4">Add</button>
        <a href="/teacher/viewall" class="btn btn-primary px-4">View All</a>
    </div>
</form>
